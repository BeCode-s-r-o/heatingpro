{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/@app/*"],
      "@history*": ["./src/@history"],
      "@lodash": ["./src/@lodash"],
      "@mock-api": ["./src/@mock-api"],
      "app/store/*": ["./src/app/store/*"],
      "app/shared/*": ["./src/app/shared/*"],
      "app/config/*": ["src/app/config/*"],
      "app/theme-layouts/*": ["src/app/layout/*"],
      "app/AppContext": ["./src/app/AppContext"]
    }
  },
  "exclude": ["node_modules", "tmp", "translate", "template"],
  "include": ["src"]
}
